* {
    margin: 0;
    padding: 0;
}

.clear {
    clear: both;
}

#container {
    background: #ddd;
    width: 1000px;
    margin: auto;
}

#header {
    color: #fff;
    height: 300px;
    background: #369;
}

#content {

}

#left {
    background: #ffc;
    width: 200px;
}

#center {
    width: 300px;
}

#right {
    background: #ccf;
    width: 500px;
}

#left,
#center,
#right {
    float: left;
    height: 1000px;
}

#footer {
    color: #fff;
    height: 300px;
    background: #333;
}